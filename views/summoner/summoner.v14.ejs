<div>
    <button class="btn btn-primary pull-right btn-sm" onclick="refreshSummoner()"><span class="glyphicon glyphicon-refresh"></span></button>
</div>

<div>
    <div class="media">
        <div class="media-left">
            <img src="http://ddragon.leagueoflegends.com/cdn/6.5.1/img/profileicon/<%=summoner.profileIconId%>.png" class="media-object">
        </div>
        <div class="media-body">
            <h3 class="media-heading"><%= summoner.name %></h3>
            <p><b>Level</b> <%= summoner.summonerLevel %></p>
            <p><i>Updated: <%= humanizeDuration(new Date().getTime() - summoner.$refreshDate, { round: true }) %></i></p>
            <pre class="bgwhite"><%= JSON.stringify(summoner, null, 4) %></pre>
        </div>
    </div>
</div>
